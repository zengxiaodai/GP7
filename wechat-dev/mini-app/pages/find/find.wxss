/* pages/find/find.wxss */

.box {
    width: 750rpx;
    height: 750rpx;
    background-color: red;
}

.inner {
    width: 200rpx;
    height: 200rpx;
    background-color: blue;
}

view {
    line-height: 80rpx;
}

.abc {
    width: 200rpx;
    height: 200rpx;
    border: 1rpx solid red;
    margin: 20rpx auto;
    background-color: black;
}

.door {
    width: 750rpx;
    height: 200rpx;
    border: 1rpx solid blue;
    margin: 0 auto;
}

.cates {
  white-space: nowrap;
}
.cate {
  display: inline-block;
  width: 120rpx;
  line-height: 80rpx;
  border: 1rpx solid #ccc;
  text-align: center;
}
.cate.on {
  color: red;
}

.info {
  line-height: 80rpx;
  background: #ccc;
}
.info image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.fes {
  width: 400rpx;
  height: 400rpx;
  display: block;
  margin: 0 auto;
}
.search {
  border: 1rpx solid red;
  margin: 20rpx 0;
}
